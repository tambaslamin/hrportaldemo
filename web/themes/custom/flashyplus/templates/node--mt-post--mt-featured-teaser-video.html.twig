{#
/**
 * @file
 * Flashy+'s theme implementation to display a Post node in featured teaser view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('flashyplus/node-view-mode-featured-teaser-video') }}
<article{{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="col-lg-8">
      {% if content.field_mt_pst_video|render %}
        {{ content.field_mt_pst_video }}
      {% endif %}
    </div>
    <div class="col-lg-4">

      {% trans %}
        <div class="promoted-label mt-style-custom-all">Promoted</div>
      {% endtrans %}

      {% if display_submitted or content.field_mt_pst_category|render %}
        <div class="node__meta ml-2">
          {% if display_submitted %}
            {% set createdDate = node.getCreatedTime|date('j M Y') %}
            <span class="node__meta-item">
              {{ createdDate }}
            </span>
          {% endif %}
          {% if content.field_mt_pst_category|render %}
            <div class="node__meta-item node__meta-tags">
              {{ content.field_mt_pst_category }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {{ title_prefix }}
      {% if not page %}
        <h2{{ title_attributes.addClass("mt-0 node__title") }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
      {{ title_suffix }}

      {% if content|without('field_mt_pst_video', 'field_mt_pst_category')|render %}
        <div {{ content_attributes.addClass('node__content') }}>
          {{ content|without('field_mt_pst_video', 'field_mt_pst_category') }}
        </div>
      {% endif %}

      {% if display_submitted %}
        <div class="node__meta">
          {{ author_picture }}
          <span{{ author_attributes.addClass('node__submitted') }}>
            {{ author_name }}
            {{ metadata }}
          </span>
        </div>
      {% endif %}
    </div>

  </div>
</article>
