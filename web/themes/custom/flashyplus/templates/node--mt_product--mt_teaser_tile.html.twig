{#
/**
 * @file
 * Flashy+'s theme implementation to display a Product node in teaser tile view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('flashyplus/node-view-mode-teaser-tile') }}
<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="product-thumbnail-container">
    {{ content.field_mt_prd_teaser_image }}
    {% if content.field_mt_prd_tags|render %}
      {{ content.field_mt_prd_tags }}
    {% endif %}
  </div>

  {% if not page %}
    <h4{{ title_attributes.addClass("mt-0 node__title") }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h4>
  {% endif %}
  {% if content.field_mt_prd_price|render %}
    <div class="teaser-tile__price">
      {{ content.field_mt_prd_price }}
    </div>
  {% endif %}

  <div{{ content_attributes.addClass('node__content') }}>
    {{ content|without('field_mt_prd_teaser_image', 'field_mt_prd_tags', 'field_mt_prd_price') }}
  </div>

</article>
