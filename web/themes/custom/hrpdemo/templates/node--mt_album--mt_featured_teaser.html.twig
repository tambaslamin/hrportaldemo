{#
/**
 * @file
 * HRPortalDEMO's theme implementation to display a Album node in teaser tile view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('hrpdemo/node-view-mode-featured-teaser') }}
<article{{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="col-lg-8">
      {% if content.field_mt_alb_image|render %}
        {{ content.field_mt_alb_image }}
      {% endif %}
    </div>
    <div class="col-lg-4">

      {% trans %}
        <div class="promoted-label mt-style-custom-all">Promoted</div>
      {% endtrans %}

      {{ title_prefix }}
      {% if not page %}
        <h2{{ title_attributes.addClass("mt-0 node__title") }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
      {{ title_suffix }}
     
      <div{{ content_attributes.addClass('node__content') }}>
        {{ content|without('field_mt_alb_image') }}
      </div>

      {% trans %}
        <a class="mt-link-stylable" href="{{ url }}">Read more</a>
      {% endtrans %}

    </div>
  </div>
</article>