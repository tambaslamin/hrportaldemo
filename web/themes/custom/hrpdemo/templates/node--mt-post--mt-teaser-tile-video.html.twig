{#
/**
 * @file
 * HRPortalDEMO's theme implementation to display a Post node in teaser tile view mode.
 */
#}
{% extends "node.html.twig" %}
{% block node_side %}
{% endblock %}
{% block meta_area %}
  {{ content.field_mt_pst_video }}

  {% if display_submitted or content.field_mt_pst_category|render %}
    <div class="node__meta">
      {% if display_submitted %}
        {{ metadata }}
        <span class="node__meta-item">
          {{ node.createdtime|format_date('custom', 'M d, Y') }}
        </span>
      {% endif %}
      {% if content.field_mt_pst_category|render %}
        <span class="node__meta-item node__meta-tags">
          {{ content.field_mt_pst_category }}
        </span>
      {% endif %}
    </div>
  {% endif %}

  {{ title_prefix }}
  <h4{{ title_attributes.addClass('node__title mt-0') }}>
    <a href="{{ url }}" rel="bookmark">{{ label }}</a>
  </h4>
  {{ title_suffix }}

{% endblock %}
{% block content %}
  {{ attach_library('hrpdemo/node-view-mode-teaser-tile-video') }}
  {% if content|without('field_mt_pst_video', 'field_mt_pst_category')|render %}
    <div class="node__main-content-section">
      {{ content|without('field_mt_pst_video', 'field_mt_pst_category') }}
    </div>
  {% endif %}
  {% if display_submitted %}
    <span{{ author_attributes.addClass('node__meta-user node__meta-item') }}>
      {{ author_name }}
    </span>
  {% endif %}
  {{ content.links }}
{% endblock %}
